<Page
    x:Class="UtilitiesDocs.Views.RemovePasswordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:UtilitiesDocs.ViewModels"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:RemovePasswordViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,16">
            <SymbolIcon Symbol="Permissions"/>
            <TextBlock Text="Remove Password" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Spacing="10" Margin="0,0,0,16">
            <PasswordBox Header="PDF Password" Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Enter the password common to these files"/>
            <TextBlock Text="This password will be attempted on all selected files." Style="{StaticResource CaptionTextBlockStyle}" Opacity="0.6"/>
        </StackPanel>

        <Grid Grid.Row="2" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <CommandBar DefaultLabelPosition="Right" Background="Transparent" IsOpen="False">
                <AppBarButton Icon="Add" Label="Add Files" Click="OnAddFilesClicked"/>
                <AppBarButton Icon="Delete" Label="Clear All" Click="OnClearClicked"/>
            </CommandBar>
            
            <ListView Grid.Row="1" ItemsSource="{Binding Files}" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="8" Padding="8">
                            <SymbolIcon Symbol="Document"/>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Vertical" Spacing="10" Margin="0,20,0,0">
             <StackPanel Orientation="Horizontal" Spacing="12">
                 <Button Content="Unlock Files" Style="{StaticResource AccentButtonStyle}" Command="{Binding RemovePasswordsCommand}" />
                 <ProgressRing IsActive="{Binding IsBusy}"/>
             </StackPanel>
             <TextBlock Text="{Binding StatusMessage}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
        </StackPanel>
    </Grid>
</Page>
