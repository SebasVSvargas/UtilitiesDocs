<Page
    x:Class="UtilitiesDocs.Views.ClientManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UtilitiesDocs.Views"
    xmlns:converters="using:UtilitiesDocs.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:UtilitiesDocs.ViewModels"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Page.DataContext>
        <vm:ClientManagementViewModel x:Name="ViewModel"/>
    </Page.DataContext>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,24">
            <SymbolIcon Symbol="People"/>
            <TextBlock Text="Client Management" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="1" ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300" MaxWidth="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Registration Form -->
            <StackPanel Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="16" Spacing="16">
                <TextBlock Text="Client Details" Style="{StaticResource SubtitleTextBlockStyle}"/>
                
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Header="First Name" Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Nombres"/>
                    <TextBox Grid.Column="1" Header="Last Name" Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Apellidos"/>
                </Grid>

                <TextBox Header="ID Number" Text="{Binding IdNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Cédula"/>
                <TextBox Header="Phone Number" Text="{Binding PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Celular"/>
                <TextBox Header="Address" Text="{Binding Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Dirección"/>
                <TextBox Header="Birth Year" Text="{Binding BirthYear, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="YYYY"/>

                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Stretch">
                    <Button Content="Save" Command="{Binding SaveClientCommand}" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Stretch"  Width="100"/>
                    <Button Content="Delete" Command="{Binding DeleteClientCommand}" 
                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                            Background="Red" Foreground="White" HorizontalAlignment="Stretch" Width="100"/>
                    <Button Content="Cancel" Command="{Binding CancelCommand}" 
                            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                            HorizontalAlignment="Stretch" Width="100"/>
                </StackPanel>

                <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Client List -->
            <Grid Grid.Column="1" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Client Directory" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,12"/>
                
                <TextBox Grid.Row="1" PlaceholderText="Search by name, ID, or phone..." 
                         Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12"/>

                <!-- Table Header -->
                <Grid Grid.Row="2" Background="{ThemeResource LayerFillColorAltBrush}" Padding="12,8" CornerRadius="4,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Name" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" Text="ID Number" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="2" Text="Phone" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="3" Text="Address" FontWeight="SemiBold"/>
                </Grid>

                <ListView Grid.Row="3" ItemsSource="{Binding Clients}" SelectedItem="{Binding SelectedClient, Mode=TwoWay}" SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding FullName}" VerticalAlignment="Center" Margin="0,0,12,0" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Grid.Column="1" Text="{Binding IdNumber}" VerticalAlignment="Center" Margin="0,0,12,0" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Grid.Column="2" Text="{Binding PhoneNumber}" VerticalAlignment="Center" Margin="0,0,12,0" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Grid.Column="3" Text="{Binding Address}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="12,4"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </Grid>
    </Grid>
</Page>
