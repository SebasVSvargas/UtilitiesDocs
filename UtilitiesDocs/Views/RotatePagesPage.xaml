<Page
    x:Class="UtilitiesDocs.Views.RotatePagesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:UtilitiesDocs.ViewModels"
    mc:Ignorable="d"
    NavigationCacheMode="Required">

    <Page.Resources>
        <!-- Converters could go here if needed -->
    </Page.Resources>

    <Page.DataContext>
        <vm:RotatePagesViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,16">
            <SymbolIcon Symbol="Rotate"/>
            <TextBlock Text="Rotate Pages" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- File List -->
            <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <CommandBar DefaultLabelPosition="Right" Background="Transparent" IsOpen="False">
                    <AppBarButton Icon="Add" Label="Add PDFs" Click="OnAddFilesClicked"/>
                    <AppBarButton Icon="Delete" Label="Clear All" Click="OnClearClicked"/>
                </CommandBar>
                
                <ListView Grid.Row="1" ItemsSource="{Binding Files}" SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <SymbolIcon Symbol="Document" Margin="0,0,12,0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                    <TextBlock Text="{Binding Path}" Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.6" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
                <TextBlock Grid.Row="1" Text="No files selected" HorizontalAlignment="Center" VerticalAlignment="Center" 
                           Style="{ThemeResource BodyTextBlockStyle}" Opacity="{Binding Files.Count, Converter={StaticResource EmptyCountToOpacityConverter}}"/>
            </Grid>

            <!-- Settings Panel -->
            <StackPanel Grid.Column="1" Spacing="16" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="16">
                <TextBlock Text="Rotation Settings" Style="{ThemeResource SubtitleTextBlockStyle}" Margin="0,0,0,8"/>

                <TextBlock Text="Rotation Angle" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                <ComboBox x:Name="RotationCombo" HorizontalAlignment="Stretch" SelectedIndex="0" SelectionChanged="RotationCombo_SelectionChanged">
                    <ComboBoxItem Content="90° Clockwise" Tag="90" />
                    <ComboBoxItem Content="180°" Tag="180" />
                    <ComboBoxItem Content="90° Counter-Clockwise" Tag="270" />
                </ComboBox>

                <TextBlock Text="Apply To" Style="{ThemeResource BodyStrongTextBlockStyle}" Margin="0,8,0,0"/>
                <ComboBox x:Name="ScopeCombo" HorizontalAlignment="Stretch" SelectedIndex="0" SelectionChanged="ScopeCombo_SelectionChanged">
                    <ComboBoxItem Content="All Pages" Tag="All" />
                    <ComboBoxItem Content="Odd Pages Only" Tag="Odd" />
                    <ComboBoxItem Content="Even Pages Only" Tag="Even" />
                    <ComboBoxItem Content="Specific Pages" Tag="Specific" />
                </ComboBox>

                <TextBox Header="Page Range (e.g. 1,3,5-8)" 
                         Text="{Binding SpecificRange, Mode=TwoWay}" 
                         Visibility="{Binding IsSpecificRangeVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                         PlaceholderText="Enter page numbers"/>

                <TextBlock Text="Output: Files will be saved in the same folder with '_rotated' suffix." 
                           Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.6" TextWrapping="Wrap" Margin="0,12,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Footer Actions -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Spacing="10" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Rotate Pages" Style="{StaticResource AccentButtonStyle}" Command="{Binding RotateCommand}" />
                <ProgressRing IsActive="{Binding IsBusy}"/>
            </StackPanel>
            <TextBlock Text="{Binding StatusMessage}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
        </StackPanel>
    </Grid>
</Page>
